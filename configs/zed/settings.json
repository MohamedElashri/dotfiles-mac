// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Dracula",
  "telemetry": {
    "metrics": false
  },
  "buffer_font_size": 15, // Default editor font size in pixels
  "buffer_font_family": "Zed Mono", // Name of the font family for editor
  "base_keymap": "VSCode", // "JetBrains", "SublimeText", "Atom" or "VSCode"
  "buffer_font_features": {
    // "calt": false  // Disable ligatures
  },
  "buffer_line_height": "comfortable",
  "ui_font_family": "Zed Sans", // Name of the font family for UI
  "ui_font_features": { // The OpenType features to enable for text in the UI
    // Disable ligatures:
    "calt": false
  },
  "ui_font_size": 16, // Default UI font size in pixels
  "features": {
    "copilot": true // Enable or disable Copilot
  },
  "copilot": {
    // The set of glob patterns for which copilot should be disabled
    // in any matching file.
    "disabled_globs": [
      ".env"
    ]
  },
  "private_files": [ // List of file patterns to hide from the file tree
    "**/.env*",
    "**/*.pem",
    "**/*.key",
    "**/*.cert",
    "**/*.crt",
    "**/secrets.yml"
  ],
  "file_scan_exclusions": [ // List of file patterns to exclude from file tree scanning
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "detect_venv": {
    "on": {
      // Default directories to search for virtual environments, relative
      // to the current working directory. We recommend overriding this
      // in your project's settings, rather than globally.
      "directories": [
        ".env",
        "env",
        ".venv",
        "venv"
      ],
      // Can also be 'csh', 'fish', and `nushell`
      "activate_script": "default"
    }
  }
}
